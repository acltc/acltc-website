<%= render "/layouts/page_title", page_title: "Info Sessions", page_subtitle: "Current Info Sessions" %>

<section id="content">
  <div class="content-wrap dash-wrap">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <table class="table table-striped">
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th></th>
            <th></th>
          </tr>
          <% @info_sessions.each do |info_session| %>
          <tr>
            <td style="vertical-align: middle;"><%= info_session.friendly_date %></td>
            <td style="vertical-align: middle;"><%= info_session.friendly_time %></td>
            <td><%= link_to "Edit", edit_info_session_path(info_session), class: "btn btn-warning" %></td>
            <td><%= link_to "Delete", info_session_path(info_session), method: :delete, data: { confirm: "Are you sure you want to delete this Info Session?" }, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>
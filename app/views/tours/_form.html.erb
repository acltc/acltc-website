
  <div class="tours-container">
    <div class="tour-hero-image">
      <div class="tour-background-layer">
        <div class="content-wrap" id="tour-content-wrap">
        
            <% if @tour_split_test == "Book A Tour Long Form" || @long %>
              <%= form_for @tour do |f| %>
                <% if @tour.errors.any? %>
                  <div class="alert alert-dismissible alert-warning center-warning">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h2>Oops! You forgot to fill out
                      <%= pluralize(@tour.errors.count, "field") %>:
                    </h2>
                    <ul>
                      <% @tour.errors.full_messages.each do |msg| %>
                        <h4><%= msg %></h4>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="row" id="tour-row-container">
                  <div class="col-xs-12" id="tour-header-container">
                    <img class="logo" src="<%= image_path 'actualize-logo-triangle-sm.png'%>">
                    <h1>Book A Tour</h1>
                    <p><strong>Come check out Actualize for yourself! Get a look at the space and learn directly from an Admissions Advisor how you can launch a brand new career.</strong></p>
                  </div>
                  <div class="col-md-5 id="tour-form-left"">
                    <div class="form-group">
                      <label class="required label-radio form-label">Which location would you like to tour?</label>
                      <div id="city" class="radio">
                        <%= f.radio_button :city, "Chicago" %>
                        <%= f.label :city, "Chicago", :value => "Chicago" %><a href="https://www.google.com/maps/place/222+W+Merchandise+Mart+Plaza,+Chicago,+IL+60654/@41.8885185,-87.6354802,17z/data=!3m1!4b1!4m2!3m1!1s0x880e2cb6fa650467:0xd94994faa9dd5715" target="_blank">- 222 W Merchandise Mart Plaza Chicago, IL 60654</a><br />
                        <%= f.radio_button :city, "New York City" %>
                        <%= f.label :city, "New York City", :value => "New York City" %><a href="https://www.google.com/maps/place/150+Broadway,+New+York,+NY+10038/@40.7093102,-74.010236,17z" target="_blank">- 150 Broadway New York, NY 10038</a><br />
                        <%= f.radio_button :city, "San Francisco" %>
                        <%= f.label :city, "San Francisco", :value => "San Francisco" %><a href="https://www.google.com/maps/place/77+Geary+St,+San+Francisco,+CA+94108/@37.7876653,-122.4047894,17z/data=!3m1!4b1!4m2!3m1!1s0x80858088f19da4a5:0x55997ff84c10b76f" target="_blank">- 77 Geary St. San Francisco, CA 94108</a>
                      </div>
                    </div>
                    
                    <% if @tour.interview_id.present? %>
                      <div class="form-group tour-interview-field">
                        <%= f.label :interview_id, "Choose a tour date and time", class: "required form-label", id: "additional-tour-text"  %><br />
                        <%= f.collection_select :interview_id, Interview.where('starts_at > ? AND starts_at < ?', DateTime.now, DateTime.now + 200.hours).where(booked: false).order(starts_at: :asc), :id, :interview_date_human, {:include_blank => @tour.interview.interview_time_zone || 'Select Date & Time' }, { id: 'tours', class: 'form-control shorten-select' } %>
                      </div>
                    <% else %>
                      <div class="form-group tour-interview-field">
                        <%= f.label :interview_id, "Choose a tour date and time", class: "required form-label", id: "additional-tour-text"  %><br />
                        <%= f.collection_select :interview_id, Interview.where('starts_at > ? AND starts_at < ?', DateTime.now, DateTime.now + 200.hours).where(booked: false).order(starts_at: :asc), :id, :interview_date_human, {:include_blank => 'Select Date and Time'}, { id: 'tours', class: 'form-control shorten-select' } %>
                      </div>
                    <% end %>
                  </div>
                
                
                  <div class="col-md-7" id="tour-form-right">
                    <div class="form-group">
                      <%= f.label :first_name, "First Name", class: "required form-label" %><br />
                      <%= f.text_field :first_name, autofocus: true, class: "form-control tour-form-field" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :last_name, "Last Name", class: "required form-label" %><br />
                      <%= f.text_field :last_name, autofocus: true, class: "form-control tour-form-field" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :email, "Email Address", class: "required form-label" %><br />
                      <%= f.text_field :email, class: "form-control tour-form-field" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :phone, "Cell Phone Number", class: "required form-label" %><br />
                      <%= f.text_field :phone, class: "form-control tour-form-field", placeholder: "xxx-xxx-xxxx" %>
                    </div>
                  </div>
                  
                  <div class="col-xs-12">
                    <%= f.invisible_captcha :subtitle %> <!-- This is an invisible field that only spambots see. If it is filled in, the tour won't save. -->
                    <div class="form-group" id="tour-form-submit-button">
                      <%= f.submit "Submit", class: " tour-submit-button" %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <%= form_for @tour do |f| %>
                <% if @tour.errors.any? %>
                  <div class="alert alert-dismissible alert-warning center-warning">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h2>Oops! You forgot to fill out
                      <%= pluralize(@tour.errors.count, "field") %>:
                    </h2>
                    <ul>
                      <% @tour.errors.full_messages.each do |msg| %>
                        <h4><%= msg %></h4>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="row" id="tour-row-container">
                  <div class="col-xs-12" id="tour-header-container">
                    <img class="logo" src="<%= image_path 'actualize-logo-triangle-sm.png'%>">
                    <h1>Book A Tour</h1>
                    <p><strong>Come check out Actualize for yourself! Get a look at the space and learn directly from an Admissions Advisor how you can launch a brand new career.</strong></p>
                  </div>
                  <div class="col-xs-12" id="tour-form-right">
                    <div class="form-group">
                      <%= f.label :first_name, "First Name", class: "required form-label" %><br />
                      <%= f.text_field :first_name, autofocus: true, class: "form-control tour-form-field" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :email, "Email Address", class: "required form-label" %><br />
                      <%= f.text_field :email, class: "form-control tour-form-field" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :phone, "Cell Phone Number", class: "required form-label" %><br />
                      <%= f.text_field :phone, class: "form-control tour-form-field", placeholder: "xxx-xxx-xxxx" %>
                    </div>
                  </div>
                  <p><strong>After completing this form, we will call you shortly with more details about your tour.</strong></p>
                  <%= f.invisible_captcha :subtitle %> <!-- This is an invisible field that only spambots see. If it is filled in, the tour won't save. -->
                  <div class="form-group" id="tour-form-submit-button">
                    <%= f.submit "Submit", class: "tour-submit-button" %>
                  </div>
                </div>
              <% end %>
            <% end %>  
          
        </div>
      </div>
    </div>
  </div>




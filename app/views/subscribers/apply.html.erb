<% content_for :head do %>
  <title>Apply for Actualize part-time coding bootcamp
</title>
    <meta name="description" content='Application for Actualize coding school and apprenticeship program. Part-time schedule, small classes, and three locations: Chicago, New York, and San Francisco.
'>
  <% end %>

<section id="content">
  <div class="content-wrap apply-page">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
      <% if @subscriber.errors.any? %>
        <div class="alert alert-dismissible alert-warning center-warning">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <h2>Oops! You forgot to fill out
            <%= pluralize(@subscriber.errors.count, "field") %>:
          </h2>
          <ul>
            <% @subscriber.errors.full_messages.each do |msg| %>
              <h4><%= msg %></h4>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_tag '/subscribers_application', method: :post do %>
        <div class="form-group">
          <%= label :first_name, "First Name", class: "required form-label" %><br />
          <%= text_field_tag :first_name, @subscriber.first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label :email, "Email Address", class: "required form-label" %><br />
          <%= text_field_tag :email, @subscriber.email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label :phone, "Phone Number", class: "required form-label" %><br />
          <%= text_field_tag :phone, @subscriber.phone, :required => true, class: "form-control" %>
        </div>
          <%= hidden_field_tag :mousetrap, nil, :value => "Application" %>
        <div class="form-group">
          <%= submit_tag "Get Started!", class: "button button-3d nomargin nopadding" %>
        </div>
      <% end %>

      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>

<%= render "/layouts/page_title", page_title: "Begin an application", page_subtitle: "Let's get started. Please enter you name and email below." %>

<section id="content">
  <div class="content-wrap">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
      <%= form_for @subscriber do |f| %>
        <% if @subscriber.errors.any? %>
          <div class="alert alert-dismissible alert-warning center-warning">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <h2>Oops! You forgot to fill out
              <%= pluralize(@subscriber.errors.count, "field") %>:
            </h2>
            <ul>
              <% @subscriber.errors.full_messages.each do |msg| %>
                <h4><%= msg %></h4>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :first_name, "First Name", class: "required form-label" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "Email Address", class: "required form-label" %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <%= f.hidden_field :mousetrap, :value => @test %>
        <div class="form-group">
          <%= f.submit "Get Started!", class: "button button-3d nomargin nopadding" %>
        </div>
      <% end %>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>
<% if @subscriber.mousetrap == "Curriculum Download" %>
  $(".subscribe-download").css("color", "red");
  $(".subscribe-download").html("Error, please enter your name and a valid email to download the curriculum.");
<% elsif @subscriber.mousetrap == "Sticky Curriculum Download" %>
  $(".sticky-btn").prop("value", "Error! Try Again?");
<% elsif @subscriber.mousetrap == "Homepage Footer" %>
  $("#subscribe-instructions").html("Thank you! You've been added to our list.");
<% end %>



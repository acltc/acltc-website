<footer>
    <div id="pdf-sticky-footer">
        <h1>Sticky Foot Face</h1>
        {{message}}
        <button class="btn btn-default" @click="toggleCareerDownload" id="sticky-footer-button">Learn More</button>
      <div class="well curriculum-well" v-if="showCareerDownload">
           <p class="subscribe-download">Download our full curriculum to see what we teach week-by-week!</p>
          <div class="row">
              <%= form_tag("/subscribers_curriculum", method: "post", remote: true) do %>
                <div class="col-md-3">
                    <%= text_field_tag :first_name, nil, placeholder: "First Name" %>
                </div>
                <div class="col-md-3">
                    <%= text_field_tag :email, nil, placeholder: "Email" %>
                </div>
                <div class="col-md-3">
                   <%= text_field_tag :phone, nil, placeholder: "Phone" %>
                </div>
                <div class="col-md-3">
                     <%= hidden_field_tag :mousetrap, nil, value: "Curriculum Download Phone Test" %>
                     <%= submit_tag "Download Curriculum", class: "curriculum-download-btn", style: "padding:0;margin:0;background-color:#F25252;color:white;" %>
                </div>
              <% end %>
          </div>
      </div> 

    </div>
    <div class="container footer">
    <div class="row">
        <div class="footer-nav">
            <div class="collapse navbar-collapse navbar-default" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "Apply", new_application_path %></li>
                <li><%= link_to "FAQ", faqs_path %></li>
                <li><%= link_to "Tutorials", tutorial_lessons_path %></li>
                <li><%= link_to "Corporate Training", corporate_training_path %>
                <li><%= link_to "Blog", blog_posts_path %></li>
                <li><%= link_to "Contact Us", new_contact_path %></li>
                <% if admin_signed_in? %>
                <li><%= link_to "Admin", admins_dashboard_path %></li>
                <li><%= link_to('Logout', destroy_admin_session_path, method: :delete) %></li>
                <% end %>
              </ul>
            </div><!-- /.navbar-collapse -->
        </div>
    </div>
        <div class="col-md-6">
            <p id="subscribe-instructions">Sign up for news about upcoming courses and updates about ACLTC, events in your area, and other resources.</p>

            <%= form_tag("/subscribers_footer", method: "post", remote: true) do %>
                <%= text_field_tag :first_name, nil, placeholder: "First Name" %>
              
                <%= text_field_tag :email, nil, placeholder: "Email" %>

                <%= hidden_field_tag :mousetrap, nil, value: "Homepage Footer" %>

                <%= submit_tag "Sign Up" %>
            <% end %>
        </div>

        <div class="col-md-6 inquiries">
            <p>For general Inquiries contact us at: <strong><a href="mailto:hello@actualize.co" target="_blank">hello@actualize.co</a></strong>
            <div class="icons">
                        <a href="https://www.facebook.com/pages/Anyone-Can-Learn-To-Code/1544569925800363" target="_blank"><img src="<%= asset_path 'facebook.png'%>"></a>
                        <a href="https://twitter.com/actualize" target="_blank"><img src="<%= asset_path 'twitter.png'%>"></a>
                        <br><br>
            </div>
            <p>ACLTC, <%= Time.now.year %>. All rights reserved.</p>

        </div>
    </div>

    <script>
        $(window).scroll(function(e){ 
          var $el = $('#pdf-sticky-footer'); 
          var isPositionFixed = ($el.css('position') == 'fixed');
          if ($(this).scrollTop() > 200 && !isPositionFixed){ 
            $('#pdf-sticky-footer').css({'position': 'fixed', 'bottom': '0px'}); 
          }
          if ($(this).scrollTop() < 200 && isPositionFixed)
          {
            $('#pdf-sticky-footer').css({'position': 'static', 'bottom': '0px'}); 
          } 
        });
    </script>
</footer>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
  <h2>Add Blog Category</h2>
  <%= form_for @blog_category do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add Category", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  <%= render 'links' %>
  </div>
  <div class="col-md-2"></div>
</div>
<% content_for :head do %>
  <title>Anyone Can Learn To Code free online video tutorials</title>
    <meta name="description" content='Learn to code from scratch with our lead instructors in these introductory videos. Basic web development tutorial designed to introduce complete beginners to web development.'>
  <% end %>
<!-- Subsriber Modal
============================================= -->
<div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div style="background-color:#007AFD" class="modal-header">
        <h4 style="color:#FFFFFF" class="modal-title" id="myModalLabel"><b>Start learning to code today!</b></h4>
        <h4 style="color:black" class="modal-title">Sign up to gain FREE access to our full library of video lessons.</h4>
      </div>
      <div class="modal-body">
      <%= form_tag("/subscribers", method: "post", remote: true) do %>
        <div class="form-group">
          <label class="required form-label">
            First Name
          </label><br />
          <%= text_field_tag :first_name, nil, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="required form-label">
            Email
          </label><br />
          <%= text_field_tag :email, nil, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
      	<%= hidden_field_tag :mousetrap, nil, value: "View Tutorials" %>
	      <%= submit_tag "View Tutorials!", class: "button button-3d nomargin nopadding" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Page Title
============================================= -->
<section id="page-title">
	<div class="container clearfix">
		<h1>Learn to Code</h1>
		<span>Thinking about learning how to code but don't know where to start? This series of videos and exercises is designed to teach you the fundamentals of computer programming, starting from ground zero.</span>
		<span id="message" style="color:#18a497;text-align:center;"></span>
	</div>
</section><!-- #page-title end -->
<!-- Content
============================================= -->
<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
			<% @categories.each do |category| %>
				<div class="fancy-title title-bottom-border">
					<h3><i class="<%= category[:icon] %>"></i>&emsp;<%= category[:title] %></h3>
				</div>
				<div class="list-group">
					<% category[:lessons].each do |lesson| %>
						<a href="/tutorial/lessons/<%= lesson[:title].parameterize %>" class="list-group-item">
							<h4 class="list-group-item-heading">
								<%= lesson[:title] %>
								<% if lesson[:time] %>
									<span class="lesson-time hidden-xs"><i class="icon-time"></i> <%= lesson[:time] %></span>
								<% end %>
								<% if lesson[:time_mac] %>
									<span class="plat_osx lesson-time hidden-xs"><i class="icon-time"></i> <%= lesson[:time_mac] %></span>
								<% end %>
								<% if lesson[:time_win] %>
									<span class="plat_win lesson-time hidden-xs"><i class="icon-time"></i> <%= lesson[:time_win] %></span>
								<% end %>
							</h4>
						</a>
					<% end %>
				</div>
				<% if category[:lessons].length == 0 %>
					<p>&emsp;<i class="icon-cog"></i> Coming soon!</p>
				<% end %>
			<% end %>
    </div>
  </div>
</section><!-- #content end -->
<!-- modal js -->
<script type="text/javascript">
	<% if !cookies[:is_subscriber] %>
    $(window).load(function(){
        $('#myModal').appendTo("body").modal({
          'show': true,
          'backdrop': 'static'
          });
    });
  <% end %>
</script>

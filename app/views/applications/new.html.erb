<%= render "/layouts/page_title", page_title: @page_title || "Apply", page_subtitle: "Please fill out the form below to apply for admission. Fields with an asterisk are required." %>
  <div id="">
    <section id="content">
      <div class="content-wrap">
        <div class="row">
          <div class="">
            <%= form_for @application do |f| %>
              <% if @application.errors.any? %>
                <div class="alert alert-dismissible alert-warning center-warning">
                  <button type="button" class="close" data-dismiss="alert">Ã—</button>
                  <h2>Oops! You forgot to fill out
                    <%= pluralize(@application.errors.count, "field") %>:
                  </h2>
                  <ul>
                    <% @application.errors.full_messages.each do |msg| %>
                      <h4><%= msg %></h4>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group" @keyup="applicationFields">
                <%= f.label :first_name, "First Name", class: "required form-label" %><br />
                <%= f.text_field :first_name, autofocus: true, value: params[:first_name], class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :last_name, "Last Name", class: "required form-label" %><br />
                <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :email, "Email Address", class: "required form-label" %><br />
                <%= f.text_field :email, value: params[:email], class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :phone, "Cell Phone Number", class: "required form-label" %><br />
                <%= f.text_field :phone, class: "form-control", value: params[:phone], placeholder: "xxx-xxx-xxxx" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :address, "Address", class: "required form-label" %><br />
                <%= f.text_field :address, class: "form-control", placeholder:"Street, City, State, Zip" %>
              </div>

              <div class="form-group" >
                <label class="required label-radio form-label">Which location are you applying for?</label>
                <div id="location" class="radio" style="{background-color: red;}">
                  <%= f.radio_button :location, "Chicago" %>
                  <%= f.label :location, "Chicago", :value => "Chicago" %><br />
                  <%= f.radio_button :location, "San Francisco" %>
                  <%= f.label :location, "San Francisco", :value => "San Francisco" %><br />
                  <%= f.radio_button :location, "New York City" %>
                  <%= f.label :location, "New York City", :value => "New York City" %>
                </div>
              </div>
              <div class="form-group" >
                <label class="required label-radio">How did you hear about Actualize?</label><br />
                <div class="radio row">
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Course Report", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Course Report", :value => "Course Report" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Google Search", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Google Search", :value => "Google Search" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Meetup", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Meetup", :value => "Meetup" %>
                  </div>
                </div>
                <div class="radio row">
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Quora", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Quora", :value => "Quora" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Referral", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Referral", :value => "Referral" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "SkilledUp", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "SkilledUp", :value => "SkilledUp" %>
                  </div>
                </div>
                <div class="radio row">
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "SwitchUp", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "SwitchUp", :value => "SwitchUp" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Thinkful", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Thinkful", :value => "Thinkful" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Word of Mouth", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Word of Mouth", :value => "Word of Mouth" %>
                  </div>
                </div>
                <div class="radio row">
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Facebook", { :class => "learn-about-acltc" } %>
                    <%= f.label :learn_about_acltc, "Facebook", :value => "Facebook" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.radio_button :learn_about_acltc, "Other", { :class => "learn-about-acltc learn-about-acltc-other" } %>
                    <%= f.label :learn_about_acltc, "Other", :value => "Other" %>
                  </div>
                </div>
              </div>
              <div id="learn-acltc-hidden" style="display:none;">
                <div class="form-group" @keyup="applicationFields">
                  <%= f.label :learn_about_acltc_specify, "Please specify how you learned about Actualize:", class: "form-label" %><br />
                  <%= f.text_field :learn_about_acltc_specify, class: "form-control" %>
                </div>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :primary_goals, "What are your primary goals in learning how to code?", class: "required form-label" %><br />
                <%= f.text_area :primary_goals, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :programming_experience, "Do you have previous programming experience? Online tutorials count!", class: "required form-label" %><br />
                <%= f.text_area :programming_experience, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :current_occupation, "Tell us more about what you're currently doing (job or school, etc.)", class: "required form-label" %><br />
                <%= f.text_area :current_occupation, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :preferred_work_location, "If you want a job in web development, in which city will you seek employment?", class: "required label-leading form-label" %><br />
                <%= f.text_field :preferred_work_location, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :work_concurrently, "Will you keep your job during the program? If so, how will you do both?", class: "required form-label" %><br />
                <%= f.text_area :work_concurrently, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :why_better, "Why should you be accepted into the program over other applicants?", class: "required form-label" %><br />
                <%= f.text_area :why_better, class: "form-control" %>
              </div>
              <div class="form-group" @keyup="applicationFields">
                <%= f.label :tinker_example, "Programming requires complex problem solving, logical analysis, and the ability to tinker with something until it works. Give examples of when you've had these experiences.", class: "required label-leading form-label" %><br />
                <%= f.text_area :tinker_example, class: "form-control" %>
              </div>

              <p>Thanks for filling out the application!</p>

              <% if @long %>
                <div class="form-group">
                  <%= hidden_field_tag :long, true %>
                </div>
              <% end %>

              <div class="invisible-captcha">
                <%= f.invisible_captcha :subtitle %> <!-- This is an invisible field that only spambots see. If it is filled in, the application won't save. -->
              </div>
              <br>
              <br>
              <div class="form-group">
                <%= f.submit "Submit Application", class: "button button-3d nomargin nopadding" %>
              </div>
            <% end %>
          </div>
          <!-- <div class="col-md-4">
            <div id="progress-bar-container">
              <h3>Application Progress</h3>
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" :style="{ width: progressBar + '%' }" >
                  {{ progressBar }}%
                </div>
              </div>
            </div>
          </div> -->
        </div>
      </div>
    </section>
  </div>

  <script type="text/javascript">
    $(".learn-about-acltc").on("change", function(){
    $("#learn-acltc-hidden").toggle($(this).hasClass("learn-about-acltc-other"));
  });
  </script>

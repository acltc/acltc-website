<%= render "/layouts/page_title", page_title: "Apply", page_subtitle: "Please fill out the form below to apply for admission. Fields with an asterisk are required." %>

<section id="content">
  <div class="content-wrap">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
      <%= form_for @subscriber do |f| %>
        <% if @subscriber.errors.any? %>
          <div class="alert alert-dismissible alert-warning center-warning">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <h2>Oops! You forgot to fill out
              <%= pluralize(@subscriber.errors.count, "field") %>:
            </h2>
            <ul>
              <% @subscriber.errors.full_messages.each do |msg| %>
                <h4><%= msg %></h4>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :email, "Email Address", class: "required form-label" %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
      <% end %>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</section>

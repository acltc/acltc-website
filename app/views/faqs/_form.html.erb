<%= form_for @faq do |f| %>
  <div class="form-group">
    <%= f.label :question %><br />
    <%= f.text_field :question, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :answer %><br />
    <%= f.text_area :answer, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :priority %><br />
    <%= f.text_field :priority, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br />
    <%= f.select :category, options_for_select(["General", "Tuition & Payment", "Application & Acceptance", "Actualize Program", "Etc."]), {:include_blank => '-Select-'}, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.submit submit_button, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
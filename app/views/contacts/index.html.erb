<%= render "/layouts/page_title", page_title: "Messages", page_subtitle: "" %>
<section id="content">
  <div class="content-wrap">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <table class="table table-striped">
          <tr>
          <th>Name</th>
            <th>Message Sent</th> 
            <th>Subject</th>
            <th>Location</th>
          </tr>
          <% @contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.full_name, contact_path(contact) %></td>
            <td><%= contact.contacts_human_time %></td> 
            <td><%= contact.subject %></td>
            <td><%= contact.location %></td>
          </tr>
          <% end %>
        </table>

      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</section>
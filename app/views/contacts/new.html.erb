                    <input class="required" type="text" name="contact[phone]" id="contact_phone" placeholder="Phone Number" />
                    <textarea rows="3" name="contact[message]" id="contact_message" placeholder="Ask your question here!"></textarea>
                    <input type="submit" name="commit" value="Ask Away!" class="primary-color" >
                <% end %>

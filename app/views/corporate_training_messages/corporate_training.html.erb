          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="skill gray-skill-wrapper border-bottom-yellow">
                <img class="curriculum-icon" src="<%= asset_path 'html_icon.png'%>">
                <h3>HTML</h3>
              </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <div class="skill gray-skill-wrapper border-bottom-yellow">

<div class="modal-body">
    <%= form_tag("/profiles", method: "post", remote: true) do %>

      <div class="container-fluid">
        <div class="row">

          <div class="col-sm-6">
            <div class="form-group">
              <label class="form-label">
                Gender
              </label><br />
              <%= select_tag :gender, options_for_select(["Male", "Female", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="form-label">
                Age
              </label><br />
              <%= select_tag :age, options_for_select(["20s", "30s", "40s", "50s", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="form-label">
                Race
              </label><br />
              <%= select_tag :race, options_for_select(["B-AA", "H", "A", "C", "O", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="form-label">
                Times Applied
              </label><br />
              <%= select_tag :times_applied, options_for_select([1, 2, 3, "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="form-label">
                Salary
              </label><br />
              <%= select_tag :salary, options_for_select([1, 2, 3, "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>

          </div>
          <div class="col-sm-6">

            <div class="form-group">
              <label class="form-label">
                Credit Score
              </label><br />
              <%= select_tag :credit_score, options_for_select(["0, Weak: < 600", "1, Fair: 600-650", "2, Good: 650 - 750", "3, Excellent: 750 +", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>

            <div class="form-group">
              <label class="form-label">
                Finacial Network
              </label><br />
              <%= select_tag :financial_network, options_for_select(["1, Family", "2, Friends", "3, Other", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>

            <div class="form-group">
              <label class="form-label">
                Savings
              </label><br />
              <%= select_tag :savings, options_for_select(["0, None", "1, Some", "2, All", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>

            <div class="form-group">
              <label class="form-label">
                Experience in Coding
              </label><br />
              <%= select_tag :experience_in_coding, options_for_select(["0", "1", "2", "3", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>

            <div class="form-group">
              <label class="form-label">
                Readiness
              </label><br />
              <%= select_tag :experience_in_coding, options_for_select(["0", "1", "2", "3", "Undetermined"], "Undetermined"), class: "form-control" %>
            </div>
          </div>

        </div>
      </div>

      <hr>
      <div class="profile-modal-footer">
        <button type="button" class="button button-3d nomargin nopadding profile-close" data-dismiss="modal" style="width:40%">Close</button>
        <%= hidden_field_tag :application_id, application.id %>
        <%= submit_tag "Save Profile", class: "button button-3d nomargin nopadding", style: "width:40%" %>
      </div>

    <% end %>
</div>
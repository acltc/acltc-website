<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <%= form_for @job_opening do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :salary %>
        <%= f.text_field :salary, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control write-html" %>
      </div>
      <%= f.submit submit_button, class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>

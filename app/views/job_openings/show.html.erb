<%= render "/layouts/page_title", page_title: "Job Opening", page_subtitle: "" %>
<div id="job-openings-show">
  <section id="content">
    <div class="content-wrap dash-wrap">
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="application-links">
            <%= link_to "Back to Careers", "/careers", class: "btn btn-success left-link" %>
            <% if current_admin %>
              <%= link_to "Edit", edit_job_opening_path(@job_opening), class: "btn btn-warning right-link" %>
              <%= link_to 'Delete', job_opening_path(@job_opening), method: :delete, data: { confirm: 'Are you sure you want to delete this job listing?' }, class: "btn btn-danger right-link" %>
            <% end %>
          </div>
          <br>
          <div>
            <h2 class="text-center"><%= @job_opening.title %></h2>
            <br>
            <h3>Location: <%= @job_opening.location %></h3>
            <h3>Salary: <%= @job_opening.salary %></h3>
          </div>
          <div class="job-opening-description">
            <h3>Description</h3>
            <%= @job_opening.description.html_safe %>
          </div>
        </div>
        <div class="col-md-2"></div>
      </div>
    </div>
  </section>
</div>

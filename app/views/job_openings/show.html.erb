<%= render "/layouts/page_title", page_title: @job_opening.title , page_subtitle: "" %>
<section id="content">
  <div class="content-wrap dash-wrap">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="application-links">
          <%= link_to "Back to Careers", job_openings_path, class: "btn btn-success left-link" %>
          <% if current_admin %>
            <%= link_to 'Delete', job_opening_path(@job_opening), method: :delete, data: { confirm: 'Are you sure you want to delete this job listing?' }, class: "btn btn-danger right-link" %>
          <% end %>
        </div>
        <br>
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>Job Title</th>
              <td><%= @job_opening.title %></td>
            </tr>
            <tr>
              <th>Location</th>
              <td><%= @job_opening.location %></td>
            </tr>
            <tr>
              <th>Salary</th>
              <td><%= @job_opening.salary %></td>
            </tr>
            <tr>
              <th>Description</th>
              <td><%= @job_opening.description %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</section>

<!DOCTYPE html>
<html>
<head>
  <title>Anyone Can Learn To Code</title>
  <%= stylesheet_link_tag    'application', media: 'all'  %>
  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <%= javascript_include_tag 'application' %>
</head>
<body class="stretched">



  <!-- Header
  ============================================= -->
  <header id="header" class="transparent-header">

    <div id="header-wrap">

      <div class="container clearfix">

        <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

              <!-- Logo
              ============================================= -->
              <div id="logo">
                <a href="/" class="standard-logo" data-dark-logo="assets/theme/acltc_logo.png"><%= image_tag "acltc_logo.png", height: 45 %></a>
                <!-- <a href="/" class="retina-logo" data-dark-logo="assets/theme/logo-dark@2x.png"><img src="assets/theme/logo@2x.png" alt="Canvas Logo"></a> -->
              </div><!-- #logo end -->

              <!-- Primary Navigation
              ============================================= -->
              <nav id="primary-menu">

                <ul class="one-page-menu">
                  <li class="current"><%= link_to "Home", root_path %></li>
                  <li class="mega-menu"><%= link_to "Apply", "http://goo.gl/forms/zrdY395j8w" %></li>
                  <li class="mega-menu"><%= link_to "Contact Us", new_contact_path %></li>
                  <li class="mega-menu"><%= link_to "FAQ", faqs_path %></li>
                  <li class="mega-menu"><%= link_to "Blog", blog_posts_path %></li>
                  <% if admin_signed_in? %>
                  <li class="mega-menu"><%= link_to "Admin Dashboard", admins_dashboard_path %></li>
                  <li><%= link_to('Logout Admin', destroy_admin_session_path, method: :delete) %></li>
                  <% end %>
                </ul>

              </nav><!-- #primary-menu end -->

            </div>

          </div>

        </header><!-- #header end -->
        
        <%= yield %>

        <%= render 'shared/footer' %>

        </div><!-- #wrapper end -->


    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>



  </body>
  </html>
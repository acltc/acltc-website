<%= render "/layouts/page_title", page_title: "Mini Courses", page_subtitle: "Take Your Skills to the Next Level" %>

<!-- Content
============================================= -->
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="postcontent nobottommargin clearfix">
              <h3><%= @mini_course.name %></h3>
              <h4>Description:</h4>
                <p><%= @mini_course.description %></p>
              <h4>Youâ€™ll Learn About:</h4>
              <ul class="skills-learned">
                <% @mini_course.skills_learned.split(";").each do |skill| %>
                  <li><%= skill %></li>
                <% end %>
              </ul>
              <h4>Prerequisites:</h4>
              <ul class="skills-learned">
                <% @mini_course.prerequisites.split(";").each do |prereq| %>
                  <li><%= prereq %></li>
                <% end %>
              </ul>
              <h4>Register:</h4>
              <%= form_tag '/mini_course_applications/' do %>
                <div class="form-group">
                  <%= label_tag :first_name %><br />
                  <%= text_field_tag :first_name, nil, autofocus: true, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag :last_name %><br />
                  <%= text_field_tag :last_name, nil, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag :email %><br />
                  <%= text_field_tag :email, nil, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag :phone %><br />
                  <%= text_field_tag :phone, nil, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag :statement, "Statement of Purpose" %><br />
                  <%= text_area_tag :statement, nil, class: "form-control" %>
                </div>
                <%= hidden_field_tag "mini_course_id", @mini_course.id %>
                <div class="form-group">
                  <%= submit_tag 'Submit Application', class: "btn btn-primary btn-lg" %>
                </div>
              <% end %>
            </div>
            <%= render "/blog_posts/side_bar" %>
        </div>
    </div>
</section><!-- #content end -->
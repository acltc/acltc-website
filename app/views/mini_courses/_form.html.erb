<%= form_for @mini_course do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_date %><br />
    <%= datetime_select Date.today, prefix: :start_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %><br />
    <%= datetime_select Date.today, prefix: :end_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location %><br />
    <%= f.collection_select :location_id, Location.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit submit_button, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>




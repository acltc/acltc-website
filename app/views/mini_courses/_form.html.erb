<%= form_for @mini_course do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_date %><br />
    <%= f.datetime_select :start_date, :default => { :hour => 9, :minute => 0 } %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %><br />
    <%= f.datetime_select :end_date, :default => { :hour => 21, :minute => 30 } %>
  </div>
  <div class="form-group">
    <%= f.label :location %><br />
    <%= f.collection_select :location_id, Location.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :skills_learned %><br />
    <%= f.text_area :skills_learned, class: "form-control" %>
    <p class="help-block">Seperate skills by semicolon.</p>
  </div>
  <div class="form-group">
    <%= f.label :prerequisites %><br />
    <%= f.text_area :prerequisites, class: "form-control" %>
    <p class="help-block">Seperate skills by semicolon.</p>
  </div>
  <div class="form-group">
    <%= f.submit submit_button, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

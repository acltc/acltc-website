.tour-hero-image {
  background-image: url("<%= asset_path('book_a_tour_hero.png') %>");
  // background-image: url("<%= asset_path('book_a_tour_peter_hero.png') %>");
  height: 42em;
  background-size: cover;
  background-position: center;
  width: 100%;
  position: relative;
  top: 0;
  border: 0;
}

#header-wrap{
  background-color: #111111;
}

.child{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

.tour-row{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}


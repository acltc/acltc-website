.tour-hero-image {
  background-image: url("<%= asset_path('book_a_tour_hero.png') %>");
  // background-image: url("<%= asset_path('book_a_tour_peter_hero.png') %>");
  height: 940px;
  background-size: cover;
  background-position: center;
  width: 100%;
  position: relative;
  top: 0;
  border: 0;
}

#header-wrap{
  background-color: #111111;
}

.child {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  margin-left: auto;
  margin-right: auto;
  width: 100%;
  height: 920px;
}

.tour-row {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

#tour-form-box {
  background-color: rgba(255, 255, 255, 0.85);
  width: 75%;
  height: 350px;
  border-radius: 5px;
  padding-top: 50px;
  padding-bottom: 50px;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}

#tour-form-left-container {
  top: 50%;
  transform: translateY(-50%);
  margin-left: auto;
  margin-right: auto;
}

#tour-form-submit-box {
  background-color: rgba(255, 255, 255, 0.85);
  width: 75%;
  height: 450px;
  border-radius: 5px;
  padding-top: 40px;
  padding-bottom: 40px;
  margin-left: auto;
  margin-right: auto;
}

#tour-form-submit-button-container {
  text-align: center;
  margin-top: 25px;
} 

.tour-label-container {
  text-align: center;
}

.tour-fields {
  width: 90%;
}

#tour-interview-field select {
  margin-left: auto;
  margin-right: auto;
}

div#city.radio {
  text-align: center;
}


#tour-form-submit-button {
  width: 40%;
}

@media screen and (max-width: 768px) {

  #tour-form-box {
    width: 100%;
  }

  #tour-form-submit-box{
    width: 100%;
  }

}

@media screen and (max-width: 992px) {

   .tour-row {
     height: 900px;
   }

   #tour-form-submit-box {
     margin-top: 5px;
   }

   #tour-form-box {
     margin-bottom: 5px;
   }

}

@media screen and (max-width: 1268px) {

  .tour-label-container {
    width: 60%;
  }

  #tour-form-box {
    height: 420px;
    margin-left: auto;
    margin-right: auto;
    display: block;
  }

}


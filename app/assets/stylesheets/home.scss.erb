/* Mixins */

@mixin rounded($radius: 5px) {
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  border-radius: $radius;
}

@mixin opacity($opacity) {
  opacity: $opacity;
  $opacity-ie: $opacity * 100;
  filter: alpha(opacity=$opacity-ie); //IE8
}
@mixin keyframe-fadeIn {
  0%   { opacity:0; }
  100% { opacity:1; }
}

@keyframes pulse {
  0% {
    @include opacity(0);
  }
  100% {
    @include opacity(1);
  }
}




$color-primary: #17a396;
$color-primary-bright: lighten($color-primary, 10%);
$color-secondary: #ebe7d9;
$color-accent: #f25252;
$color-text: #555555;
$color-neutral: #eaeaea;
$color-danger: $color-accent;

h1,h2,h3,h4,p {
  -webkit-font-smoothing: antialiased !important;
}
h2 {
  color: $color-primary;
}
h3{
  color: black;
  font-size: 1.5em;
}

p{
  font-size: 1.2em;
}

button {
  background-color: $color-neutral;
  padding: 10px 25px;
  border-color: none;
  color: $color-primary;
  font-size: 1.2em;
  border: 1px solid darken($color-neutral, 15%);
  @include rounded;
  margin: 10px 0;
}

.button-primary{
  background-color: $color-accent;
  color: white;
  border: none;
}

.button-simple{
  background:rgba(0,0,0,0.7);
  border: 1px solid white;
  padding: 5px 15px;
  color: white;
  @include rounded;

  i.fa{
    color: $color-accent;
  } 
}



/*  NAVIGATION */

.navigation {
  background-color: $color-secondary;
  min-height: 90px;
  position: relative;
  
  &:before{
    content:"";
    position: absolute;
    background-color: $color-secondary;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 90px;
    z-index: -100;
  }

  &:after{
    content:"";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 10px;
    z-index: 100;
    background-image: url("<%= asset_path('border.png') %>");
    background-repeat: repeat-x;
  }

  .navbar-brand {
    padding: 1em 2em 0 0;
  }

  .nav {
    float: right;
    padding: 1em .5em;
  }

  .navbar-toggle {
    margin-top: 20px;
  }
}


.marquee {
  background-image: url("<%= asset_path('marquee-bg.jpg') %>");
  min-height: 700px;
  background-repeat: no-repeat;
  background-size: cover;
  margin-top: -100px;
  background-position: center;

  .marquee-content {
    padding: 3.5em;
    text-align: center;
    z-index: 99999;
    position: relative;

    h2 {
      text-align: center;
      color: white;
      font-size: 3em;
    }
    p {
      color: white;
      font-size: 1.4em;
      line-height: 1.5em;
      font-weight: normal;

    }
    h3, h4{
      color: $color-primary-bright;
    }
    h4 {
      font-size: 1em;
      font-weight: normal;
    }

  }
  .col-md-12 {
    min-height: 580px;
    margin-top: 120px;

    &:before{
      content:"";
      border-top: 5px solid $color-primary-bright;
      position: absolute;
      background-color: black;
      bottom: 0;
      left: 0;
      width: 100%;
      min-height: 580px;
      z-index: 100;
      @include opacity(.7);
    }
  }
}


.home-section {
  padding-top: 2em;
  padding-bottom: 4em;
}
.section-header{
  text-align: center;
  padding: 1.3em 4em;
  h2 {
    margin-bottom: 20px;
  }
  p{color: $color-text;
  }
}

.our-program {
  .phase{
    background: $color-secondary;
    overflow: auto;
    margin-bottom: 20px;
    .phase-block{
        width: 50%;
        float: left;
        min-height: 350px;
        padding: 50px 40px 50px 60px;

      &.block-image{
        border-right: 4px solid $color-primary;
        position: relative;
        background-size: cover;

      span{
        position: absolute;
        width: 60px;
        height: 60px;
        background-color: $color-accent;
        top:20%;
        right: -30px;
        text-align:center;
        font-size: 2em;
        color: white;
        line-height: 2em;
        @include rounded(30px);
      };

      &.phase1-img{background-image: url("<%= asset_path('phase1.jpg') %>");}
      &.phase2-img{background-image: url("<%= asset_path('phase2.jpg') %>");}
      &.phase3-img{background-image: url("<%= asset_path('phase3.jpg') %>");}
        
      }
    }
  }
}

